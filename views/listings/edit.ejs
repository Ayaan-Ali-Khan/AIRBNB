<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row">
            <div class="col-10 offset-1">
                <br>
                <h3>Edit <%= listing.title %>
                </h3>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data"
                    novalidate class="needs-validation">
                    <br><br>
                    <div class="mb-3 col-8">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" id="title" placeholder="Enter Title" type="text"
                            value="<%= listing.title %>" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" type="text"
                            placeholder="Enter Description" class="form-control"
                            required><%= listing.description %></textarea>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="category" class="form-label">Category</label>
                        <select class="form-select" id="category" name="listing[category]" required>
                            <option selected>
                                <%= listing.category %>
                            </option>
                            <option value="trending">Trending</option>
                            <option value="top cities">Top Cities</option>
                            <option value="mountains">Mountains</option>
                            <option value="beaches">Beaches</option>
                            <option value="pools">Amazing Pools</option>
                            <option value="camping">Camping</option>
                            <option value="homes">Homes</option>
                            <option value="treehouse">Tree Houses</option>
                            <option value="cottages">Cottages</option>
                            <option value="islands">Islands</option>
                            <option value="other">Other...</option>
                        </select>
                    </div>
                    <div class="mb-5">
                        <label for="image">Listing Original Image</label><br><br>
                        <img src="<%= originalImageUrl %>" alt="listingOriginalImage" id="image"
                            style="border-radius: 0.65rem; object-fit: cover;">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="image" class="form-label">Upload New Image</label>
                            <input name="listing[image]" id="image" type="file" class="form-control">
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" id="price" type="number" placeholder="Enter Price"
                                value="<%= listing.price %>" class="form-control" required>
                            <div class="invalid-feedback">Please enter a valid price</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" id="location" type="text" placeholder="Enter Location"
                                value="<%= listing.location %>" class="form-control" required>
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                        <div class="mb-3 col-4">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" id="country" type="text" placeholder="Enter Country"
                                value="<%= listing.country %>" class="form-control" required>
                            <div class="invalid-feedback">Country should be valid</div>
                        </div>
                    </div>
                    <button class="btn btn-outline-success" id="updateL">Update Listing</button>
                </form>
            </div>
        </div>
    </body>