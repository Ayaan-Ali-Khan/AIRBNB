<% layout("/layouts/boilerplate.ejs") %>
    <body>
        <div class="row">
            <div class="col-10 offset-1">
                <h3 class="mt-3">Create a new Listing</h3><br>
                <form action="/listings" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
                    <div class="mb-3 col-8">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" id="title" placeholder="Add a catchy Title" type="text" class="form-control" required>
                        <div class="valid-feedback">Title looks good!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" type="text" placeholder="Enter Description"
                            class="form-control" required></textarea>
                    </div>
                    <div class="mb-3 col-8">
                        <label for="category" class="form-label">Select Category</label>
                        <select class="form-select" id="category" name="listing[category]" required>
                            <option selected>Category</option>
                            <option value="trending">Trending</option>
                            <option value="top cities">Top Cities</option>
                            <option value="mountains">Mountains</option>
                            <option value="beaches">Beaches</option>
                            <option value="pools">Amazing Pools</option>
                            <option value="camping">Camping</option>
                            <option value="homes">Homes</option>
                            <option value="treehouse">Tree Houses</option>
                            <option value="cottages">Cottages</option>
                            <option value="islands">Islands</option>
                            <option value="other">Other...</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="url" class="form-label">Upload Image</label>
                            <input class="form-control" type="file" id="url" name="listing[image]">
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" id="price" type="number" placeholder="Enter Price" class="form-control" required>
                            <div class="invalid-feedback">Please enter a valid price</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" id="location" type="text" placeholder="Enter Location" class="form-control" required>
                            <div class="invalid-feedback">Location should be valid</div>
                        </div>
                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" id="country" type="text" placeholder="Enter Country" class="form-control" required>
                            <div class="invalid-feedback">Country should be valid</div>
                        </div>
                    </div>
                    <button class="btn btn-outline-dark" id="addl">Add</button>
                </form>
            </div>
        </div>
    </body>